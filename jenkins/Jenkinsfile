pipeline {
    agent any
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timestamps()
    }
    
    stages {
        stage('Build') {
            steps {
                script {
                    sh 'docker build -f jenkins/Dockerfile -t ${JOB_NAME}:${BUILD_NUMBER} .'
                    sh 'docker tag ${JOB_NAME}:${BUILD_NUMBER} ${JOB_NAME}:latest'
                }
            }
        }
        
        stage('Test') {
            environment {
                // This looks up the ID 'openai-api-key' in Jenkins Credentials
                OPENAI_API_KEY = credentials('openai-api-key') 
            }
            steps {
                script {
                    sh 'docker run --rm -e OPENAI_API_KEY=${OPENAI_API_KEY} ${JOB_NAME}:${BUILD_NUMBER}'
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
    }
}